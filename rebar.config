%% -*- mode: erlang;erlang-indent-level: 4;indent-tabs-mode: nil -*-
%% ex: ft=erlang ts=4 sw=4 et

{erl_opts,
  [ debug_info,
    {parse_transform, lager_transform},
    %% warnings_as_errors, % disabled due to disabled function
    strict_validation,
    warn_bif_clash,
    warn_deprecated_function,
    warn_export_all,
    warn_export_vars,
    warn_exported_vars,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_unused_import,
    warn_unused_function,
    warn_unused_record,
    warn_unused_vars]
}.

{deps, [
    {lager, ".*", {git, "git://github.com/basho/lager.git", {tag, "2.1.1"}}},
    {rebar_lock_deps_plugin, ".*", {git, "git://github.com/seth/rebar_lock_deps_plugin.git",
                                   {tag, "3.1.0"}}},
    {poolboy, ".*", {git, "git://github.com/devinus/poolboy.git",
                                   {tag, "1.5.1"}}},
    {chipmunk2d, ".*", {git, "git://github.com/lrascao/Chipmunk2D.git",
                        {branch, "feature/aws_ec2_build"}}, [raw]},
    {uthash, ".*", {git, "git://github.com/troydhanson/uthash.git",
                        {tag, "v1.9.9"}}, [raw]}
]}.

{post_hooks, [{compile, "make -C priv"},
             {clean, "make -C priv clean"}]}.

{plugins, [rebar_lock_deps_plugin]}.
